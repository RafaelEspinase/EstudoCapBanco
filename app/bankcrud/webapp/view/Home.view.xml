<mvc:View controllerName="bankcrud.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.uxap"
    xmlns="sap.ui.table"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m">

    <u:ObjectPageLayout id="ObjectPageLayout"
    enableLazyLoading="true"
    beforeNavigate="onBeforeNavigate"
    useIconTabBar="true"
    showTitleInHeaderContent="true"
    upperCaseAnchorBar="false">
		<u:headerTitle>
			<u:ObjectPageDynamicHeaderTitle>
				<u:expandedHeading>
					<m:Title text="{homeModel>/customer/firstName} {homeModel>/customer/lastName}" wrapping="true"/>
				</u:expandedHeading>

				<u:snappedHeading>
					<m:FlexBox fitContainer="true" alignItems="Center">
						<m:Avatar class="sapUiTinyMarginEnd"/> <!-- src="./test-resources/sap/uxap/images/imageID_275314.png"  -->
						<m:Title text="{homeModel>/customer/lastName}" wrapping="true" />
					</m:FlexBox>
				</u:snappedHeading>

				<u:expandedContent>
					<m:Text text="{homeModel>/customer_ID}"/>
				</u:expandedContent>

				<u:snappedContent>
					<m:Text text="{homeModel>/customer_ID}"/>
				</u:snappedContent>

				<u:snappedTitleOnMobile>
					<m:Title text="Senior UI Developer"/>
				</u:snappedTitleOnMobile>

				<u:actions>
					<m:Button text="Edit" type="Emphasized"/>
					<m:Button type="Transparent" text="Delete" press="teste"/>
					<m:Button type="Transparent" text="Copy"/>
					<m:OverflowToolbarButton icon="sap-icon://action" type="Transparent" text="Share" tooltip="action"/>
				</u:actions>
			</u:ObjectPageDynamicHeaderTitle>
		</u:headerTitle>

		<u:headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" >
				<m:Avatar class="sapUiSmallMarginEnd" displaySize="L" />

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Link text="{homeModel>/customer/phone}"/>
					<m:Link text="{homeModel>/customer/email}"/>
				</layout:VerticalLayout>

				<layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
					<!-- <m:Image src="./test-resources/sap/uxap/images/linkedin.png"/>
					<m:Image src="./test-resources/sap/uxap/images/Twitter.png" class="sapUiSmallMarginBegin"/> -->
			    </layout:HorizontalLayout>

				<!-- <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Hello! I am Denise and I use UxAP"/>
					<m:VBox>
						<m:Label text="Achieved goals"/>
						<m:ProgressIndicator percentValue="30" displayValue="30%"/>
					</m:VBox>
				</layout:VerticalLayout> -->

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="{homeModel>/customer/addresses/results/0/city}"/>
				</layout:VerticalLayout>
			</m:FlexBox>
		</u:headerContent>

		 <u:sections>
		    <u:ObjectPageSection titleUppercase="false" id="balance" title="Saldo">
                <u:subSections>
                    <u:ObjectPageSubSection id="goalsSS1" titleUppercase="false">
                        <u:blocks>
                            <m:Label text="Saldo"/>
                        </u:blocks>
                    </u:ObjectPageSubSection>
                </u:subSections>
			</u:ObjectPageSection>
            <u:ObjectPageSection titleUppercase="false" id="extract" title="Extrato">
                <u:subSections>
                    <u:ObjectPageSubSection id="subSectionExtract" titleUppercase="false">
                        <u:blocks>
                            <m:Table showNoData="true" id="tableExtract" items="{path: '/Accounts'}" sticky="ColumnHeaders" growing="true" growingScrollToLoad="true"> <!-- items="{path: 'jobMonitoring>/'}" -->
                                <m:columns class="sapUiSmallMarginTop">
                                    <m:Column hAlign="Center">
                                        <m:Label text="Status"/>
                                    </m:Column>
                                    <m:Column hAlign="Center">
                                        <m:Label text="Nome"/>
                                    </m:Column>
                                    <m:Column hAlign="Center">
                                        <m:Label text="Data Inicial"/>
                                    </m:Column>
                                    <m:Column hAlign="Center">
                                        <m:Label text="Data Final"/>
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                <m:ColumnListItem vAlign="Middle" type="Active"><!--app:OrderId="{SalesOrder}"-->
                                    <m:cells>
                                    <m:Text text="{path: 'ID'}" wrapping="false"/>
                                    <m:Text text="{ID}" wrapping="false"/>
                                    <m:Text text="Data" wrapping="false"/>
                                    <m:Text text="Data" wrapping="false"/>
                                    </m:cells>
                                </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </u:blocks>
                    </u:ObjectPageSubSection>
                </u:subSections>
			</u:ObjectPageSection>
		</u:sections>
	</u:ObjectPageLayout>
</mvc:View>